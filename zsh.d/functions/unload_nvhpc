#! /bin/zsh
set_nvhpc_vars
typeset -gx PATH=${PATH//$_NVHPC_PATH:}
typeset -gx PATH=${PATH//$_NVHPC_MPI_PATH:}
typeset -gx LD_LIBRARY_PATH=${LD_LIBRARY_PATH//$_NVHPC_LD_LIBRARY:}
typeset -gx LD_LIBRARY_PATH=${LD_LIBRARY_PATH//$_NVHPC_MPI_LD_LIBRARY:}
typeset -gx MANPATH=${MANPATH//$_NVHPC_MPI_MANPATH:}
typeset -gx MANPATH=${MANPATH//$_NVHPC_MANPATH:}
typeset -U path manpath
unset _NVHPC_INSTALL_DIR _NVARCH
unset _NVHPC_PATH _NVHPC_LD_LIBRARY_PATH _NVHPC_MANPATH
unset _NVHPC_MPI_PATH _NVHPC_MPI_LD_LIBRARY _NVHPC_MPI_MANPATH
